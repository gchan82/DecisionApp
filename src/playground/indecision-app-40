//Add Remove All button
//Setup handleRemoveAll -> alert some message
//setup onClick to fire method

const Options = props => {
  return (
    <div>
      <button onClick={props.deleteOptions}>Clear</button>
      {props.options.map(option => (
        <Option key={option} optionText={option} />
      ))}

      <Option />
    </div>
  );
};
